.page-header
    h4 Pending Client Proposals:
if clients
    each client in clients
        .panel.panel-default
            .panel-heading
                h4 #{client.project}
            .li.list-group-item
                strong Name:
                |  #{client.name}
            .li.list-group-item
                strong Email:
                |  #{client.email}
            .li.list-group-item
                strong Organization:
                |  #{client.organization}
            .li.list-group-item
                strong Description:
                |  #{client.description}
            .li.list-group-item
                a(href=client.presentation) Project Presentation / Website URL
            .li.list-group-item
                strong Submitted For Term:
                |  #{client.term}
            .panel-footer
                .row
                    .col-xs-6
                        strong Current Status:
                        |  #{client.status}
                    .col-xs-6
                        form(method='POST')
                            input(type='hidden', name='_csrf', value=_csrf)
                            input(type='hidden', name='clientID', value= client._id)
                            input(type='hidden', name='Decision', value= 'Approve')
                            button.btn.btn-success.btn-sm.pull-right(type='submit', value='Approve') Approve Pending Request
                        form(method='POST')
                            input(type='hidden', name='_csrf', value=_csrf)
                            input(type='hidden', name='clientID', value= client._id)
                            input(type='hidden', name='Decision', value= 'Deny')
                            button.btn.btn-warning.btn-sm.pull-right(type='submit', value='Deny') Reject Pending Request
                        form(method='POST')
                            input(type='hidden', name='_csrf', value=_csrf)
                            input(type='hidden', name='clientID', value= client._id)
                            input(type='hidden', name='Decision', value= 'Delete')
                            button.btn.btn-danger.btn-sm.pull-right(type='submit', value='Delete') Delete Pending Request

