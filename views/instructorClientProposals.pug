extends layout

block content
    if clients
        each client in clients
            .panel.panel-default
                h3.panel-heading= client.project
                .li.list-group-item
                    h4.list-group-item-danger Name
                    p.card-text= client.name
                .li.list-group-item
                    h4.list-group-item-heading Email
                    p.card-text= client.email
                .li.list-group-item
                    h4.list-group-item-heading Description
                    p.card-text= client.description
                .li.list-group-item
                    h4.list-group-item-heading Applying for:
                    p.card-text= client.term
                h3.panel-footer
                    .btn-group
                        //- TODO: Make these buttons functional
                        a.btn.btn-primary(href='#') Approve
                        a.btn.btn-secondary(href='#') Deny
            hr
